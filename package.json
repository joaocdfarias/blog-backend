{
    "name": "blog-backend",
    "version": "1.0.0",
    "main": "app.js",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^4.9.0",
        "express": "^4.18.2"
    },
    "scripts": {
        "start": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/app.ts",
        "build": "tsc",
        "test": "jest",
        "prettier:check": "npx prettier --check .",
        "prettier:fix": "npx prettier --write .",
        "lint": "npx eslint .",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@types/express": "^4.17.16",
        "@types/jest": "^29.4.0",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "husky": "^8.0.0",
        "jest": "^29.4.1",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.3",
        "prisma": "^4.9.0",
        "ts-jest": "^29.0.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.9.4"
    },
    "lint-staged": {
        "*.{css,less,scss,html,json,jsx,js}": [
            "prettier --write ."
        ],
        "*.js": "eslint --fix"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
